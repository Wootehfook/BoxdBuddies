{
  "name": "boxdbuddy",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "license": "AGPL-3.0-or-later",
  "author": "Wootehfook",
  "description": "Compare Letterboxd watchlists between friends to find movies everyone wants to watch",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wootehfook/BoxdBuddies.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "icons:generate": "tauri icon ./BBud.png -o src-tauri/icons",
    "icons:favicon": "node scripts/sync-favicon.mjs",
    "icons:prepare": "npm run icons:generate && npm run icons:favicon",
    "format": "prettier --write src/**/*.{ts,tsx,css,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,json}",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:vitest": "vitest run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist target node_modules/.vite",
    "dev:full": "concurrently \"npm run dev\" \"npm run tauri:dev\"",
    "audit:security": "npm audit --audit-level moderate",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "mcp:start": "bash .devcontainer/start-mcp-servers.sh",
    "mcp:monitor": "bash .devcontainer/mcp-monitor.sh",
    "mcp:status": "bash scripts/mcp-status.sh",
    "mcp:restart": "bash scripts/mcp-restart.sh",
    "mcp:stop": "bash scripts/mcp-stop.sh",
    "dev:mcp": "npm run mcp:start && npm run dev",
    "tauri:dev:mcp": "npm run mcp:start && npm run tauri:dev",
    "setup:dev": "bash .devcontainer/setup-with-mcp.sh",
    "health:check": "npm run type-check && npm run lint && npm run test && npm run mcp:status",
    "scan:dead-code": "pwsh -NoProfile -File ./scripts/dead-code-scan.ps1",
    "prune:exports": "ts-prune",
    "prune:exports:web": "ts-prune --root web/frontend",
    "ai:workflow": "npm run mcp:start && npm run health:check && echo 'ðŸ¤– AI development environment ready!'",
    "release:prepare": "npm run clean && npm run health:check && npm run build && npm run tauri:build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^5.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.2",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "esbuild": "^0.25.8"
  }
}

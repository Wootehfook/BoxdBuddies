{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BoxdBuddy",
  "version": "1.1.0",
  "identifier": "com.boxdbuddies.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run icons:prepare && npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "BoxdBuddy",
        "width": 890,
        "height": 1075,
        "minWidth": 785,
        "minHeight": 825
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {}
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "appimage", "deb", "rpm"],
    "windows": {
      "wix": {
        "template": "wix/main.wxs"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

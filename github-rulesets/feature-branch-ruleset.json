{
  "name": "Development Flexibility (Feature Branches)",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "refs/heads/feature/*",
        "refs/heads/fix/*",
        "refs/heads/chore/*",
        "refs/heads/docs/*",
        "refs/heads/refactor/*",
        "refs/heads/perf/*",
        "refs/heads/test/*",
        "refs/heads/copilot/*",
        "refs/heads/changelog/*"
      ],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "dismiss_stale_reviews_on_push": false,
        "require_code_owner_review": false,
        "require_last_push_approval": false,
        "required_approving_review_count": 1,
        "required_review_thread_resolution": true
      }
    },
    {
      "type": "required_status_checks",
      "parameters": {
        "required_status_checks": [
          {
            "context": "Frontend Quality Checks",
            "integration_id": null
          },
          {
            "context": "Security Audit",
            "integration_id": null
          }
        ],
        "strict_required_status_checks_policy": true
      }
    },
    {
      "type": "max_file_size",
      "parameters": {
        "max_file_size": 100
      }
    }
  ],
  "bypass_actors": []
}

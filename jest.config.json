{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": [
    "**/__tests__/**/*.(ts|tsx)",
    "**/*.(test|spec).(ts|tsx)"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/tests/e2e/",
    "/tests/smoke/"
  ],
  "collectCoverageFrom": [
    "src/**/*.(ts|tsx)",
    "!src/**/*.d.ts",
    "!src/main.tsx",
    "!src/App-clean.tsx"
  ]
}
